.simplePagination
  %p.simplePagination__previous
    - if data[:page] > 1
      = link_to "&larr; Previous page".html_safe, request.params.merge(:page => data[:page] - 1), :class => 'simplePagination__link'
  .simplePagination__current
    %p.simplePagination__info Showing #{number_with_delimiter data[:records].size} 
    %p Page #{data[:page]} 
  %p.simplePagination__next
    - if data[:total_pages] > data[:page]
      = link_to "Next page &rarr;".html_safe, request.params.merge(:page => data[:page] + 1), :class => 'simplePagination__link'
